# EditorConfig - 统一编辑器配置
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

[*.{xml,yaml,yml}]
indent_style = space
indent_size = 2

[*.{json,json5}]
indent_style = space
indent_size = 2

[*.{properties}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.{bat,cmd,ps1}]
end_of_line = crlf

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

[Dockerfile]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[.gitignore]
indent_style = space
indent_size = 4

[*.txt]
indent_style = space
indent_size = 4
